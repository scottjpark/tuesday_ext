{
    "name": "Raphire's Curation",
    "version": "3.0.0",
    "description": "Custom extension for interacting with a personal service website",
    "manifest_version": 2,
    "author": "Raphire",
    "browser_specific_settings": {
        "gecko": {
            "id": "tuesday_ext@raphire.net"
        }
    },
    "icons": {
        "16": "resources/icon.png",
        "32": "resources/icon.png",
        "48": "resources/icon.png",
        "128": "resources/icon.png"
    },
    "permissions": [
        "https://tuesday-production.up.railway.app/*",
        "https://tuesday.raphire.net/*"
    ],
    "content_security_policy": "sandbox allow-scripts allow-forms allow-popups allow-modals;script-src 'self' 'unsafe-eval'; object-src 'self';",
    "web_accessible_resources": [
        "resources/icon.png",
        "resources/share.png",
        "resources/loader.webp",
        "resources/copy.png",
        "resources/success.png",
        "resources/fail.webp"
    ],
    "content_scripts": [
        {
            "js": [
                "scripts/common/jquery-3.7.1.min.js",
                "scripts/common/constants.js",
                "scripts/common/auth.js",
                "scripts/twitter/main.js",
                "scripts/twitter/actions.js",
                "scripts/main.js"
            ],
            "css": [
                "styles/common.css",
                "styles/twitter.css"
            ],
            "matches": [
                "https://twitter.com/*",
                "https://x.com/*",
                "https://youtube.com/*",
                "https://www.youtube.com/*"
            ],
            "run_at": "document_idle"
        }
    ]
}